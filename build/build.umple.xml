    <copy todir="UmpleToCpp/templates" overwrite="true">
      <fileset dir="UmpleToTemplate/templates" excludes="*.svn" />
    </copy>
  </target>
  
  <!-- Unzip velocity into the jar construction folder -->
  <target name="velocityjar">
    <unjar src="lib/velocity-1.7-dep.jar" dest="cruise.umple/bin/" overwrite="true"/>
  </target>

